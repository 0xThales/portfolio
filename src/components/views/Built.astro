---
import Slide from "@layouts/Slide.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const logos = Object.values(
	import.meta.glob<ImageMetadata>('@assets/logos/*.{png,svg,jpg,jpeg,webp}', { eager: true, import: 'default' })
);
---


<Slide>
    <h2 class="text-heading-2 font-family-epilogue">Built</h2>
    <p class="text-body-xxxl font-family-dm">Brands I've worked for</p>
    <div class="grid grid-cols-2 sm:grid-cols-4 place-items-center gap-6 sm:gap-8 max-h-[60vh] w-full mt-10 overflow-y-auto">
        {
			logos.map((brand) => (
				<Image class={"h-16 w-32 sm:h-20 sm:w-40 lg:h-24 lg:w-48 object-contain"} src={brand} alt="Brand logo" />
			))
        }
    </div>
</Slide>