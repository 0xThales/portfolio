---
import Whatsapp from "../../assets/whatsapp.svg";
import QrCode from "./QrCode.astro";
---

<div class="group">
    <button class="absolute top-6 right-6 text-primary-black hover:text-whatsapp-green hover:scale-110 transition-all duration-200 " >
        <Whatsapp 
        id="whatsapp-icon" 
        />
    </button>
    
    <div 
        id="whatsapp-menu" 
        class="flex flex-col gap-2  absolute top-16 right-6 bg-primary-white border border-primary-grey rounded-lg shadow-lg p-4 w-[200px] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-20"
    >
        <QrCode />
        <p class="text-body-m font-semibold">Let's talk</p>
        <p class="text-body-s text-secondary-grey mb-3">Scan the QR code to add me on WhatsApp or use the desktop link:</p>
        <a 
            href="https://wa.me/34682294382" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center justify-center bg-primary-black text-primary-white px-3 py-2 rounded text-body-s hover:bg-whatsapp-green transition-colors duration-200"
        >
            Open WhatsApp
        </a>
    </div>
</div>